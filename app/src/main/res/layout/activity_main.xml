<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="DAT MON AN"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#615f5f"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Pizza"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ebebeb"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Them Pho Mai"
                android:id="@+id/cbThemPhoMai1"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gap 2 Phomai"
                android:id="@+id/cbGap2Phomai"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gap 3 Phomai"
                android:id="@+id/cbGap3Phomai"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So Luong"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                >
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:padding="0px"
                    android:background="#db2121"
                    android:id="@+id/btnGiamPizza"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:background="#fcfcfc"
                    android:id="@+id/txtSoLuongPizza"
                    />
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:padding="0px"
                    android:background="#0fa835"
                    android:id="@+id/btnTangPizza"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rgPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbDeMong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De mong" />

                <RadioButton
                    android:id="@+id/rbDeDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De day" />

                <RadioButton
                    android:id="@+id/rbDeTruyenThong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De truyen thong" />
            </RadioGroup>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/rgPizza1">

                <RadioButton
                    android:id="@+id/rbVienPhoMai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vien Pho Mai" />

                <RadioButton
                    android:id="@+id/rbVienXucXich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vien Xuc Xich" />

            </RadioGroup>
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Hamburger"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ebebeb"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Them Pho Mai"
                android:id="@+id/cbThemPhoMai2"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Them thit bo"
                android:id="@+id/cbThemThitBo"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Them trung op la"
                android:id="@+id/cbThemTrungOpLa"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="80dp"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So Luong"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                >
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:padding="0px"
                    android:background="#db2121"
                    android:id="@+id/btnGiamHamburger"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:background="#fcfcfc"
                    android:id="@+id/txtSoLuongHamburger"
                    />
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:padding="0px"
                    android:background="#0fa835"
                    android:id="@+id/btnTangHamburger"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="Banh mi"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ebebeb"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"

            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rgBanhMi"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banh mi op la"
                    android:id="@+id/rbBMOpLa"
                    android:checked="true"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banh mi pho mai thit nguoi"
                    android:id="@+id/rbBMPhoMaiThitNguoi"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banh mi cha ca"
                    android:id="@+id/rbBMChaCa"
                    />
            </RadioGroup>

            />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="80dp"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So Luong"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                >
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:padding="0px"
                    android:background="#db2121"
                    android:id="@+id/btnGiamBanhMi"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:background="#fcfcfc"
                    android:id="@+id/txtSoLuongBanhMi"
                    />
                <Button
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:padding="0px"
                    android:background="#0fa835"
                    android:id="@+id/btnTangBanhMi"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma giam gia"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/editMaGiamGia"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giam Gia:"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/txtGiamGia"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tong Tien:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:id="@+id/txtTongTien"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Dat Hang"
            android:id="@+id/btnDatHang"
            />


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Lam lai"
            android:id="@+id/btnRefresh"
            />

    </LinearLayout>
</LinearLayout>